import java.awt.*;
import javax.swing.*;
public class Lab2 extends JApplet
{

	
	
	Image pic;
	ImageIcon ic;
	JLabel picL;
	JLabel Lakers = new JLabel("LALakers");
	Font f1 = new Font("Serif",Font.BOLD,35);
	
	Image pic2;
	ImageIcon ic2;
	JLabel picS;
	JLabel SunDance = new JLabel("SundanceSqure");
	Font f2 = new Font("SansSerif",Font.BOLD,25);
	
	
	

	
	public void init()
	{
		setLayout (new FlowLayout());
			
		pic = getImage(getCodeBase(),"Pictures/LALakers.png");
		
		ic = new ImageIcon(pic);
		
		picL = new JLabel(ic);
		
		add(picL);
		add(Lakers);
			Lakers.setFont(f1);
			Lakers.setForeground(Color.RED);
		
		
		pic2 = getImage(getCodeBase(),"Pictures/SunDance.png");
		
		ic2 = new ImageIcon(pic2);
		
		picS = new JLabel(ic2);
		
		add(picS);
		add(SunDance);
			SunDance.setFont(f2);
			SunDance. setForeground(Color.BLUE);
		
		
		
		
	}
}
		
